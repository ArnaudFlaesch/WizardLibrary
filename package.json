{
  "name": "wizard-library",
  "version": "1.0.0",
  "scripts": {
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "serve-dist": "npx http-server dist/WizardLibrary",
    "test": "ng test",
    "test:coverage": "npm run test -- --code-coverage",
    "test:ci": "npm run test:coverage -- --no-watch --no-progress --browsers=ChromeHeadlessCI && run-p -r serve-dist cy:run:ci",
    "cy:open": "cypress open",
    "cy:run": "cypress run --headless",
    "cy:run:local": "wait-on http://localhost:4200 && npm run cy:run",
    "cy:run:ci": "wait-on http://localhost:8080 && npm run cy:run -- --config-file cypress-ci.json",
    "cy:verify": "npx cypress verify",
    "eslint": "eslint . --ext .ts",
    "eslint:fix": "npm run eslint -- --fix",
    "lint:styles": "stylelint \"src/**/*.{css,scss,sass}\" ",
    "lint:styles:report": "npm run lint:styles -- --formatter json --output-file ./styleLintReport.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.3",
    "@angular/cdk": "12.0.5",
    "@angular/common": "~12.0.3",
    "@angular/compiler": "~12.0.3",
    "@angular/core": "~12.0.3",
    "@angular/forms": "~12.0.3",
    "@angular/material": "12.0.5",
    "@angular/platform-browser": "~12.0.3",
    "@angular/platform-browser-dynamic": "~12.0.3",
    "@angular/router": "12.0.5",
    "bootstrap": "5.0.1",
    "date-fns": "1.30.1",
    "jquery": "3.6.0",
    "material-design-icons": "3.0.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.3",
    "@angular/cli": "~12.0.3",
    "@angular/compiler-cli": "~12.0.3",
    "@cypress/code-coverage": "3.9.7",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "cypress": "^7.5.0",
    "cypress-wait-until": "^1.7.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "gh-pages": "^3.2.2",
    "http-server": "0.12.3",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-firefox-launcher": "^2.1.1",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "nyc": "15.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "~4.2.3",
    "wait-on": "^5.3.0"
  }
}
